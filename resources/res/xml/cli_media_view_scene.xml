        <Constraint android:id="@+id/media_progress_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="@+id/media_view_bg" app:layout_constraintTop_toBottomOf="@+id/artist"/>
        <Constraint android:id="@+id/cli_media_progress_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/cli_media_view_media_progress_time_margin_start" android:layout_marginEnd="@dimen/cli_media_view_media_progress_time_margin_end" app:layout_constraintBottom_toBottomOf="@+id/media_progress_bar" app:layout_constraintStart_toStartOf="@+id/media_view_bg"/>
    </ConstraintSet>
</MotionScene>
